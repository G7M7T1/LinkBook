@model Product

<section class="min-h-screen dark:bg-gray-900 mt-6">
    <div class="max-w-4xl p-6 mx-auto bg-white rounded-md shadow-md dark:bg-gray-800">
        <h2 class="text-lg font-semibold text-gray-700 capitalize dark:text-white">Edit Product</h2>

        <form method="post" asp-action="Upsert">
            <div class="grid grid-cols-1 gap-6 mt-4 mb-4">
                <div>
                    <label asp-for="Title" class="text-gray-700 dark:text-gray-200"></label>
                    <input asp-for="Title" class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 dark:focus:border-blue-300 focus:outline-none focus:ring">
                    <span class="text-red-500" asp-validation-for="Title"></span>
                </div>
                
                <div>
                    <label asp-for="Description" class="text-gray-700 dark:text-gray-200"></label>
                    <textarea asp-for="Description" class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 dark:focus:border-blue-300 focus:outline-none focus:ring"></textarea>
                    <span class="text-red-500" asp-validation-for="Description"></span>
                </div>

                <div>
                    <label asp-for="ISBN" class="text-gray-700 dark:text-gray-200"></label>
                    <input asp-for="ISBN" class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 dark:focus:border-blue-300 focus:outline-none focus:ring">
                    <span class="text-red-500" asp-validation-for="ISBN"></span>
                </div>

                <div>
                    <label asp-for="Author" class="text-gray-700 dark:text-gray-200"></label>
                    <input asp-for="Author" class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 dark:focus:border-blue-300 focus:outline-none focus:ring">
                    <span class="text-red-500" asp-validation-for="Author"></span>
                </div>

                <div>
                    <label asp-for="ListPrice" class="text-gray-700 dark:text-gray-200"></label>
                    <input asp-for="ListPrice" class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 dark:focus:border-blue-300 focus:outline-none focus:ring">
                    <span class="text-red-500" asp-validation-for="ListPrice"></span>
                </div>

                <div>
                    <label asp-for="Price" class="text-gray-700 dark:text-gray-200"></label>
                    <input asp-for="Price" class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 dark:focus:border-blue-300 focus:outline-none focus:ring">
                    <span class="text-red-500" asp-validation-for="Price"></span>
                </div>

                <div>
                    <label asp-for="Price50" class="text-gray-700 dark:text-gray-200"></label>
                    <input asp-for="Price50" class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 dark:focus:border-blue-300 focus:outline-none focus:ring">
                    <span class="text-red-500" asp-validation-for="Price50"></span>
                </div>

                <div>
                    <label asp-for="Price100" class="text-gray-700 dark:text-gray-200"></label>
                    <input asp-for="Price100" class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 dark:focus:border-blue-300 focus:outline-none focus:ring">
                    <span class="text-red-500" asp-validation-for="Price100"></span>
                </div>
            </div>

            <div class="flex mt-6 justify-between">
                <a asp-area="Admin" asp-controller="Product" asp-action="Index" class="px-8 py-2.5 leading-5 text-white transition-colors duration-300 transform bg-gray-700 rounded-md hover:bg-gray-600 focus:outline-none focus:bg-gray-600">Back To List</a>
                <button type="submit" class="px-8 py-2.5 leading-5 text-white transition-colors duration-500 transform bg-yellow-600 hover:bg-yellow-500 rounded-md focus:outline-none focus:bg-yellow-600">Save</button>
            </div>

            @* <div class="pt-6" asp-validation-summary="All"></div> *@
        </form>
    </div>
</section>


