@model IEnumerable<Category>

@{
    ViewData["Title"] = "Index";
}


<div class="dark:bg-gray-900 bg-white min-h-screen flex justify-center">
    <div class="overflow-x-auto relative sm:rounded-lg container">
        <div class="flex justify-between mb-3 mt-6">
            <h3 class="text-2xl text-gray-500 dark:text-white font-semibold">Book List</h3>
            <a asp-controller="Category" asp-action="Create" class="focus:outline-none text-white bg-yellow-400 hover:bg-yellow-500 focus:ring-4 focus:ring-yellow-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:focus:ring-yellow-900">Create</a>
        </div>
        <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
            <thead class="text-xs text-gray-700 uppercase dark:text-gray-400">
            <tr>
                <th scope="col" class="py-3 px-6 bg-gray-50 dark:bg-gray-800">
                    Book Id
                </th>
                <th scope="col" class="py-3 px-6">
                    Book Name
                </th>
                <th scope="col" class="py-3 px-6 bg-gray-50 dark:bg-gray-800">
                    Display Order
                </th>
                <th scope="col" class="py-3 px-6">
                    Create Date Time
                </th>
                <th scope="col" class="py-3 px-6 bg-gray-50 dark:bg-gray-800">
                    Change
                </th>
            </tr>
            </thead>
            <tbody>
            @foreach (var obj in Model)
            {
                <tr class="border-b border-gray-200 dark:border-gray-700">
                    <th scope="row" class="py-4 px-6 font-medium text-gray-900 whitespace-nowrap bg-gray-50 dark:text-white dark:bg-gray-800">
                        @obj.Id.ToString()
                    </th>

                    <td class="py-4 px-6">
                        @obj.Name
                    </td>

                    <td class="py-4 px-6 bg-gray-50 dark:bg-gray-800">
                        @obj.DisplayOrder.ToString()
                    </td>

                    <td class="py-4 px-6">
                        @obj.CreateDateTime.ToString()
                    </td>

                    <td class="py-4 px-6 bg-gray-50 dark:bg-gray-800 flex justify-around">
                        <a class="text-green-500" asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id">Edit</a>
                        <a class="text-red-500" asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id">Remove</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>